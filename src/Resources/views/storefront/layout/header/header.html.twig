{% block layout_header %}
    {# Overlay für das Mega-Menü #}

    <header class="header-main" data-modern-header>
        {# Top-Bar Hinzugefügt #}
        <div class="top-bar bg-light">
            <div class="container">
                <div class="row py-2">
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="top-bar-contact me-4">
                            <small><i class="bi bi-telephone me-1"></i> +49 123 456789</small>
                        </div>
                        <div class="top-bar-email">
                            <small><i class="bi bi-envelope me-1"></i> info@obstkistenonline.de</small>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end align-items-center">
                        <div class="top-bar-links">
                            <a href="#" class="text-decoration-none me-3"><small>Versand & Rückgabe</small></a>
                            <a href="#" class="text-decoration-none me-3"><small>Über uns</small></a>
                            <a href="#" class="text-decoration-none"><small>Kontakt</small></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Hauptheader mit Logo, Suche, Account und Warenkorb #}
        <div class="main-header" style="">
            <div class="container">
                <div class="row align-items-center">
                    {# Logo - auf Mobile zentriert #}
                    {% block layout_header_logo %}
                        <div class="col-6 col-lg-2 order-1">
                            <div class="header-logo-main">
                                {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
                            </div>
                        </div>
                    {% endblock %}

                    {# Mobile Navigation Toggle #}
                    {% block layout_header_navigation_toggle %}
                        <div class="col-3 d-lg-none header-nav-toggle order-0">
                            <button class="btn nav-main-toggle-btn header-action-btn"
                                    type="button"
                                    data-off-canvas-menu="true"
                                    aria-label="{{ 'general.menuLink'|trans|striptags }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="3" y1="12" x2="21" y2="12"></line>
                                    <line x1="3" y1="6" x2="21" y2="6"></line>
                                    <line x1="3" y1="18" x2="21" y2="18"></line>
                                </svg>
                            </button>
                        </div>
                    {% endblock %}

                    {# Mobile Actions #}
                    <div class="col-3 d-lg-none header-actions-mobile order-2">
                        <div class="d-flex justify-content-end">
                            {% block layout_header_search_toggle %}
                                <div class="search-toggle me-2">
                                    <button class="btn header-action-btn"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#searchCollapse"
                                            aria-expanded="false"
                                            aria-controls="searchCollapse"
                                            aria-label="{{ 'header.searchButton'|trans|striptags }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="11" cy="11" r="8"></circle>
                                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                        </svg>
                                    </button>
                                </div>
                            {% endblock %}
                            
                            {% block layout_header_actions_cart_mobile %}
                                <div class="header-cart"
                                     data-off-canvas-cart="true">
                                    <a class="header-action-btn"
                                       href="{{ path('frontend.checkout.cart.page') }}"
                                       data-cart-widget="true"
                                       title="{{ 'checkout.cartTitle'|trans|striptags }}"
                                       aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                            <line x1="3" y1="6" x2="21" y2="6"></line>
                                            <path d="M16 10a4 4 0 0 1-8 0"></path>
                                        </svg>
                                        <span class="badge bg-primary rounded-circle cart-badge">{% if page.cart.lineItems|length > 0 %}{{ page.cart.lineItems|length }}{% endif %}</span>
                                    </a>
                                </div>
                            {% endblock %}
                        </div>
                    </div>

                    {# Suchfeld #}
                    {% block layout_header_search %}
                        <div class="col-12 col-lg-5 mt-3 mt-lg-0 order-4 order-lg-2">
                            <div class="header-search">
                                <form action="{{ path('frontend.search.page') }}" 
                                      method="get"
                                      data-search-form="true"
                                      class="search-form">
                                    {% block layout_header_search_input_group %}
                                        <div class="input-group">
                                            {% block layout_header_search_input %}
                                                <input type="search"
                                                       name="search"
                                                       class="form-control search-input"
                                                       autocomplete="off"
                                                       autocapitalize="off"
                                                       placeholder="{{ "header.searchPlaceholder"|trans|striptags }}"
                                                       aria-label="{{ "header.searchPlaceholder"|trans|striptags }}"
                                                       value="{{ page.searchTerm }}"
                                                       data-search-input="true">
                                            {% endblock %}

                                            {% block layout_header_search_button %}
                                                <button type="submit"
                                                        class="btn btn-primary search-submit"
                                                        aria-label="{{ "header.searchButton"|trans|striptags }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <circle cx="11" cy="11" r="8"></circle>
                                                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                                    </svg>
                                                </button>
                                            {% endblock %}
                                        </div>
                                    {% endblock %}
                                </form>
                                <div class="search-results" data-search-results="true"></div>
                            </div>
                        </div>
                    {% endblock %}

                    {# Header Actions Desktop #}
                    {% block layout_header_actions %}
                        <div class="col-12 col-lg-5 header-actions-col order-3 order-lg-3" style="flex:auto;">
                            <div class="header-actions d-flex justify-content-end align-items-center">
                                {% block layout_header_shipping %}
                                    <div class="header-action-item d-none d-lg-block me-3">
                                        <div class="d-flex align-items-center">
                                            <div class="shipping-icon me-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <rect x="1" y="3" width="15" height="13"></rect>
                                                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                                    <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                                    <circle cx="18.5" cy="18.5" r="2.5"></circle>
                                                </svg>
                                            </div>
                                            <div class="shipping-info">
                                                <span class="d-block fw-bold" style="font-size: 12px;">Kostenloser Versand</span>
                                                <span class="d-block" style="font-size: 12px;">ab 50€ Bestellwert</span>
                                            </div>
                                        </div>
                                    </div>
                                {% endblock %}

                                {% block layout_header_actions_account %}
                                    <div class="header-action-item">
                                        <div class="account-menu">
                                            <button class="header-action-link"
                                                    type="button"
                                                    id="accountWidget"
                                                    data-account-menu="true"
                                                    data-bs-toggle="dropdown"
                                                    aria-haspopup="true"
                                                    aria-expanded="false"
                                                    aria-label="{{ 'account.myAccount'|trans|striptags }}"
                                                    title="{{ 'account.myAccount'|trans|striptags }}"
                                                    style="background:transparent;border:none;">
                                                <div class="header-action-icon">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                        <circle cx="12" cy="7" r="4"></circle>
                                                    </svg>
                                                </div>
                                                <div class="header-action-text d-none d-lg-block">
                                                    <span>Account</span>
                                                </div>
                                            </button>
                                            
                                            <div class="dropdown-menu dropdown-menu-end account-menu-dropdown js-account-menu-dropdown"
                                                 aria-labelledby="accountWidget">
                                                {% sw_include '@Storefront/storefront/layout/header/account-menu.html.twig' %}
                                            </div>
                                        </div>
                                    </div>
                                {% endblock %}
                                
                                {% if config('core.cart.wishlistEnabled') %}
                                    <div class="header-action-item">
                                        <a class="header-action-link"
                                           style="text-decoration:none!important;"
                                           href="{{ path('frontend.wishlist.page') }}"
                                           title="{{ 'header.wishlist'|trans|striptags }}"
                                           aria-label="{{ 'header.wishlist'|trans|striptags }}">
                                            <div class="header-action-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                                </svg>
                                            </div>
                                            <div class="header-action-text d-none d-lg-block">
                                                <span>Favoriten</span>
                                            </div>
                                        </a>
                                    </div>
                                {% endif %}

                                {% block layout_header_actions_cart %}
                                    <div class="header-action-item">
                                        <a class="header-action-link"
                                           style="text-decoration:none!important;"
                                           href="{{ path('frontend.checkout.cart.page') }}"
                                           data-cart-widget="true"
                                           title="{{ 'checkout.cartTitle'|trans|striptags }}"
                                           aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
                                            <div class="header-action-icon position-relative">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                                    <line x1="3" y1="6" x2="21" y2="6"></line>
                                                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                                                </svg>
                                            </div>
                                            <div class="header-action-text d-none d-lg-block">
                                                <span>Warenkorb</span>
                                            </div>
                                        </a>
                                    </div>
                                {% endblock %}
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>

        {# Mobile Search - nur für mobile Ansicht #}
        {% block layout_header_search_mobile %}
            <div class="collapse d-lg-none" id="searchCollapse">
                <div class="container py-2">
                    <form action="{{ path('frontend.search.page') }}" 
                          method="get"
                          data-search-form="true"
                          class="search-form">
                        <div class="input-group">
                            <input type="search"
                                   name="search"
                                   class="form-control search-input"
                                   autocomplete="off"
                                   autocapitalize="off"
                                   placeholder="{{ "header.searchPlaceholder"|trans|striptags }}"
                                   aria-label="{{ "header.searchPlaceholder"|trans|striptags }}"
                                   value="{{ page.searchTerm }}"
                                   data-search-input="true">
                            <button type="submit"
                                    class="btn btn-primary search-submit"
                                    aria-label="{{ "header.searchButton"|trans|striptags }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                </svg>
                            </button>
                        </div>
                    </form>
                    <div class="search-results-mobile mt-2" data-search-results="true"></div>
                </div>
            </div>
        {% endblock %}
    </header>
{% endblock %}