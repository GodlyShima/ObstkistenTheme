{% block layout_header %}
    <header class="header-main" data-modern-header>
        {# Top-Bar - versteckt auf kleinen Bildschirmen, sichtbar ab MD #}
        <div class="top-bar bg-light d-none d-md-block">
            <div class="container">
                <div class="row py-2">
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="top-bar-contact me-4">
                            <small><i class="bi bi-telephone me-1"></i>04141 / 786 7698</small>
                        </div>
                        <div class="top-bar-email">
                            <small><i class="bi bi-envelope me-1"></i> info@obstkistenonline.de</small>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end align-items-center">
                        <div class="top-bar-links">
                            <a href="#" class="text-decoration-none me-3"><small>Versand & Rückgabe</small></a>
                            <a href="#" class="text-decoration-none me-3"><small>Über uns</small></a>
                            <a href="#" class="text-decoration-none"><small>Kontakt</small></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Hauptheader mit Logo, Suche, Account und Warenkorb #}
        <div class="main-header">
            <div class="container">
                <div class="row align-items-center py-2">

                    {# Logo - verbesserte Zentrierung auf Mobile #}
                    {% block layout_header_logo %}
                        <div class="col-6 col-lg-2 order-1 text-center">
                            <div class="header-logo-main">
                                {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
                            </div>
                        </div>
                    {% endblock %}

                    {# Suchfeld - Desktop Version #}
                    {% block layout_header_search %}
                        <div class="col-12 col-lg-5 mt-0 mt-lg-0 order-4 order-lg-2 d-none d-lg-block">
                            <div class="header-search">
                                <form action="{{ path('frontend.search.page') }}" 
                                      method="get"
                                      data-search-form="true"
                                      class="search-form">
                                    {% block layout_header_search_input_group %}
                                        <div class="input-group">
                                            {% block layout_header_search_input %}
                                                <input type="search"
                                                       name="search"
                                                       class="form-control search-input"
                                                       autocomplete="off"
                                                       autocapitalize="off"
                                                       placeholder="{{ "header.searchPlaceholder"|trans|striptags }}"
                                                       aria-label="{{ "header.searchPlaceholder"|trans|striptags }}"
                                                       value="{{ page.searchTerm }}"
                                                       data-search-input="true">
                                            {% endblock %}

                                            {% block layout_header_search_button %}
                                                <button type="submit"
                                                        class="btn btn-primary search-submit"
                                                        aria-label="{{ "header.searchButton"|trans|striptags }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <circle cx="11" cy="11" r="8"></circle>
                                                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                                    </svg>
                                                </button>
                                            {% endblock %}
                                        </div>
                                    {% endblock %}
                                </form>
                                <div class="search-results" data-search-results="true"></div>
                            </div>
                        </div>
                    {% endblock %}

                    {# Header Actions Desktop #}
                    {% block layout_header_actions %}
                        <div class="col-12 col-lg-5 header-actions-col order-3 order-lg-3 d-none d-lg-block">
                            <div class="header-actions d-flex justify-content-end align-items-center">
                                {% block layout_header_shipping %}
                                    <div class="header-action-item me-3">
                                        <div class="d-flex align-items-center">
                                            <div class="shipping-icon me-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <rect x="1" y="3" width="15" height="13"></rect>
                                                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                                    <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                                    <circle cx="18.5" cy="18.5" r="2.5"></circle>
                                                </svg>
                                            </div>
                                            <div class="shipping-info">
                                                <span class="d-block fw-bold" style="font-size: 12px;">Kostenloser Versand</span>
                                                <span class="d-block" style="font-size: 12px;">ab 50€ Bestellwert</span>
                                            </div>
                                        </div>
                                    </div>
                                {% endblock %}

                                {% block layout_header_actions_account %}
                                <div class="col-auto">
                                    <div class="account-menu">
                                        {% sw_include '@Storefront/storefront/layout/header/actions/account-widget.html.twig' %}
                                    </div>
                                </div>
                            {% endblock %}
                                
                                {% if config('core.cart.wishlistEnabled') %}
                                    <div class="header-action-item">
                                        <a class="header-action-link"
                                           style="text-decoration:none!important;"
                                           href="{{ path('frontend.wishlist.page') }}"
                                           title="{{ 'header.wishlist'|trans|striptags }}"
                                           aria-label="{{ 'header.wishlist'|trans|striptags }}">
                                            <div class="header-action-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                                </svg>
                                            </div>
                                            <div class="header-action-text">
                                                <span>Favoriten</span>
                                            </div>
                                        </a>
                                    </div>
                                {% endif %}
                                {% block layout_header_actions_cart %}
                                    {% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
                                {% endblock %}
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>

        {# Mobile Suchfeld - optimiertes Design #}
        {% block layout_header_search_mobile %}
            <div class="collapse" id="searchCollapse">
                <div class="container py-3">
                    <form action="{{ path('frontend.search.page') }}" 
                          method="get"
                          data-search-form="true"
                          class="search-form">
                        <div class="input-group">
                            <input type="search"
                                   name="search"
                                   class="form-control search-input"
                                   autocomplete="off"
                                   autocapitalize="off"
                                   placeholder="{{ "header.searchPlaceholder"|trans|striptags }}"
                                   aria-label="{{ "header.searchPlaceholder"|trans|striptags }}"
                                   value="{{ page.searchTerm }}"
                                   data-search-input="true">
                            <button type="submit"
                                    class="btn btn-primary search-submit"
                                    aria-label="{{ "header.searchButton"|trans|striptags }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                </svg>
                            </button>
                        </div>
                    </form>
                    <div class="search-results mt-2" data-search-results="true"></div>
                </div>
            </div>
        {% endblock %}
    </header>

    {# Mobile Quick-Action-Navigation - Now placed at the bottom of the DOM #}
    {% block layout_mobile_bottom_navigation %}
        <div class="mobile-quick-nav d-lg-none">
            <div class="">
                <div class="mobile-quick-nav-inner">
                    <div class="row text-center g-0">
                        <div class="col">
                            <a href="{{ path('frontend.home.page') }}" class="mobile-nav-link">
                                <div class="mobile-nav-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                </div>
                                <div class="mobile-nav-text">Home</div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="#" class="mobile-nav-link" data-off-canvas-menu="true">
                                <div class="mobile-nav-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="3" y1="12" x2="21" y2="12"></line>
                                        <line x1="3" y1="6" x2="21" y2="6"></line>
                                        <line x1="3" y1="18" x2="21" y2="18"></line>
                                    </svg>
                                </div>
                                <div class="mobile-nav-text">Kategorien</div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="#searchCollapse" class="mobile-nav-link" data-bs-toggle="collapse" aria-expanded="false" aria-controls="searchCollapse">
                                <div class="mobile-nav-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="11" cy="11" r="8"></circle>
                                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                    </svg>
                                </div>
                                <div class="mobile-nav-text">Suche</div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="{{ path('frontend.account.home.page') }}" class="mobile-nav-link">
                                <div class="mobile-nav-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                        <circle cx="12" cy="7" r="4"></circle>
                                    </svg>
                                </div>
                                <div class="mobile-nav-text">Account</div>
                            </a>
                        </div>
                        <div class="col">
                            <a href="{{ path('frontend.checkout.cart.page') }}" class="mobile-nav-link" data-cart-widget="true">
                                <div class="mobile-nav-icon position-relative">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                        <line x1="3" y1="6" x2="21" y2="6"></line>
                                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                                    </svg>
                                    <span class="badge bg-primary rounded-circle cart-badge position-absolute" style="top: -7px; right: -7px;">{% if page.cart.lineItems|length > 0 %}{{ page.cart.lineItems|length }}{% endif %}</span>
                                </div>
                                <div class="mobile-nav-text">Warenkorb</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}